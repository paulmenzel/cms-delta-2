%h2
  = content.title
  

= content.teaser

= link_to content.title, content.filename(@language)

%br
%strong= content.location
  
- if content.dates
  %table.table.table-striped.table-bordered
    - content.dates.each do |date|
      %tr
        %td
          = l Date.parse(date.content.date), :format => :long
        %td
          = date.content.begin
        %td
          = date.content.location
        %td
          = date.content.art
  
    
  
