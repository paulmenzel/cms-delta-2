
%h1
  &nbsp;

.well.navi
  %ul.nav.nav-list
    - if @user && !@user.new_record?
      %li.nav-header
        %thin
          User 
        = @user.id
      %li
        = link_to @user do
          %i.icon-user.pull-right
          Anzeigen
            
      %li
        = link_to edit_user_path(@user) do
          %i.icon-edit.pull-right
          Bearbeiten
  
    - if current_user.admin?
      %li.nav-header
        Administration
        
      %li
        = link_to new_user_path do
          %i.icon-plus.pull-right
          User anlegen