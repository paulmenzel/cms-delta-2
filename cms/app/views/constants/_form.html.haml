
.row
  .span6
    
    .box
      .box-title
        Konfiguration
      .box-content.nopadding   
        = simple_form_for(@constant, html: {class: 'form-horizontal' }) do |f|
          -# = f.error_notification
            
          .form-inputs
            = f.input :category
            = f.input :name
            = f.input :value
            = f.input :art
            = f.input :project_id, :collection => Project.all
        
          .form-actions
            = f.button :submit, :class => 'btn btn-primary', :data => { :disable_with => 'Ãœbertrage Daten ...' }

  .span3
    .box
      
      .box-content.nopadding   
        %table.table
          %tr
            %th Kategorie
            %th Reichweite
            
          - Constant.all.group(:category).order(:project_id).each do |c|
            %tr
              %td= c.category
              %td.text-right.muted= (c.project) ? 'Projekt' : 'Global'