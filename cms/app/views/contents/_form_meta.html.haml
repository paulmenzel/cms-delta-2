- if @content.option(:ref) || @content.option(:alpha) || @content.option(:omega)
  %fieldset
    %legend
      Metadaten
        
    %options
      .form-inputs
        = f.input :ref_id                             , :input_html => { :class => 'input-block-level' }    if @content.option(:ref)
        = f.input :alpha_datum, :include_blank => true, :input_html => { :class => 'input-block-level' }    if @content.option(:alpha)
        = f.input :omega_datum, :include_blank => true, :input_html => { :class => 'input-block-level' }    if @content.option(:omega)
  %br
