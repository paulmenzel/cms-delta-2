.row
  .span6
    = simple_form_for([@project, @content_type, @content], html: {class: 'form-horizontal' }) do |f|
      = f.error_notification

      - if @locale
        = hidden_field_tag :locale, @locale
      

      %fieldset
        %legend
          Inhalte
            
        %options
          .form-inputs
            - @content_type.content_element_types.each do |cet|
              .control-group
                %label.control-label
                  = cet.name
                .controls
                  = cetform @content, cet


      %br
        
        
    
      - if @content.option(:ref) || @content.option(:alpha) || @content.option(:omega)
        %fieldset
          %legend
            Metadaten
              
          %options
            .form-inputs
              = f.input :ref_id                                 if @content.option 'ref'
              = f.input :alpha_datum, :include_blank => true    if @content.option 'alpha'
              = f.input :omega_datum, :include_blank => true    if @content.option 'omega'
        %br

      %fieldset
        %legend
          %i.icon-sitemap
          &nbsp;
          In folgenden Menüpunkten
        %options
          #tree.navi
            = hidden_field_tag 'content[branch_ids][]', ''
            %ul.nested_branches.contents
              = content_in_branches @branches.arrange(:order => :position) 
            
      %br

    
      .form-actions
        = f.button :submit, :class => 'btn btn-primary', :data => { :disable_with => 'Übertrage Daten ...' }
        - unless @content.new_record?
          = link_to close_project_content_type_content_path(@project, @content_type, @content), :class => 'btn btn-inverse pull-right', :data => { :confirm => 'Eingaben sind ggf. nicht gespeichert!' } do
            Schließen
        - else
          = link_to project_content_type_contents_path(@project, @content_type), :class => 'btn btn-inverse pull-right', :data => { :confirm => 'Eingaben werden nicht gespeichert!' } do
            Abbrechen

      %br


      - unless @content.new_record?
        %fieldset
          %legend
            %i.icon-picture
            &nbsp;
            Dokumente
          %options
            .row
              .span2
                = link_to search_project_content_documents_path(@project, @content), :remote => true, :class => 'btn input-block-level btn-large' do
                  %i.icon-search
                  &nbsp;
                  Suchen
                  
              .span4
                = render 'documents/button'
            %hr
            
            #contendocuments
              = render :partial => 'documents/contendocuments', :locals => { :documents => @content.documents }
              
            


        - unless @content.documents.empty?
          #docpoover{ :style => 'display: none;' }        
            - @content.documents.each do |document|
              = render :partial => 'documents/document_popover', :locals => { :document => document } 


        
        
        
  
  .span3
  
    %fieldset
      %legend
        %i.icon-sitemap
        Sitemap

      #sitemap.navi
        %ul.nested_branches
          = sitemap @branches.arrange(:order => :position) 