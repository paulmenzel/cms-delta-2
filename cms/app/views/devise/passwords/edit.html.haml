.section
  .da

.container
  .row
    .span3
      %h4
        %strong Password
        | recovery
      
      = render :partial => "devise/shared/links" 
      
    .span9
      %h4
        %i.icon-umbrella
        &nbsp;
        Passwort zurücksetzen
      
      %br
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put, :class => 'form-horizontal'} ) do |f| 
        - devise_error_messages! 

        = f.hidden_field :reset_password_token 

        .control-group
          = f.label :password, :class => 'control-label'
          .controls
            = f.password_field :password, :class => 'input-block-level'

        .control-group
          = f.label :password_confirmation, :class => 'control-label'
          .controls
            = f.password_field :password_confirmation, :class => 'input-block-level'
            
            
        .form-actions
          = f.submit "Passwort Zurücksetzen", :class => 'btn btn-primary'

