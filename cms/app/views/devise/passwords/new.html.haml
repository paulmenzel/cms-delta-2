.section
  .da

.container
  .row
    .span3
      %h4
        %strong Password
        | recovery
      
      = render :partial => "devise/shared/links" 
      
    .span9
      %h4
        %i.fa.fa-umbrella
        &nbsp;
        Passwort zurücksetzen
      
      %br
      = form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post, :class => 'form-horizontal'} ) do |f| 
        - devise_error_messages! 


        .control-group
          = f.label :email, :class => 'control-label'
          .controls
            = f.email_field :email, :class => 'input-block-level'

            
            
        .form-actions
          = f.submit "Passwort zurücksetzen", :class => 'btn btn-primary'
