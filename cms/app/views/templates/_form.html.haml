= simple_form_for([@project, @template], html: {class: 'form-horizontal' }) do |f|
  = f.error_notification

  .form-inputs
    = f.input :action, input_html: {  :class => "input-block-level" }
    = f.input :title, input_html: {  :class => "input-block-level" }
    = f.input :code, input_html: {  :class => "input-block-level autosize aceditor" }
    %pre#aceditor

  .form-actions
    = f.button :submit
